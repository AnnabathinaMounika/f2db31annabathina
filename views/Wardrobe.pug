extends layout 

block content 
    h1= title
    - let create = `dispatch(\"/Wardrobe/create\")`
    button.btn( class="btn-info ml-1", onclick= create) Create
    div.container-fluid
         div(class="row m-1") 
            each item, index in results
                - let destination = `dispatch(\"/Wardrobe/update?id=${item._id}\")`
                - let detail = `dispatch(\"/Wardrobe/detail?id=${item._id}\")` 
                - let deleteItem = `dispatch(\"/Wardrobe/delete?id=${item._id}\")`
                div.col-sm-2(onclick=`buy(${index})`) Wardrobe_type:#{item["Wardrobe_type"]} <br> Wardrobe_Color: #{item["Wardrobe_Color"]} <br> Wardrobe_Size: #{item["Wardrobe_Size"]} <br>
                    button.btn( class="btn-primary ml-1", onclick= destination) Update
                    button.btn( class="btn-primary ml-1", onclick= detail) Detail 
                    button.btn( class="btn-primary ml-1", onclick= deleteItem) Delete 
        

    script. 
        function buy(index) {
            alert("You purchased item " + index);
        }

        function dispatch(path){ 
            window.location.href=path 
        } 
        
  
